<GridContainer FillColor="#bec8d2" Name="SideBar">
	<Columns>
		<Column Width="1*" ID="Main"/>
		<Column Width="1" ID="Border"/>
		<Column Width="@TabsWidth" ID="Tabs"/>
	</Columns>
	<Image ColumnID="Border" ColorMask="#000000"/>
	<RadioGroupLogical Name="MainTabRadioGroup"/>
	<FlowContainer MarginTop="40" ColumnID="Tabs">
		<CheckBox RadioGroup="MainTabRadioGroup" Height="30" MarginBottom="2" ImageChecked="UI/Editor/MapEditor/rightpanel_01sectionsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_01sectionsOff.tga" Checked="true"/>
		<CheckBox RadioGroup="MainTabRadioGroup" Height="30" MarginBottom="2" ImageChecked="UI/Editor/MapEditor/rightpanel_02settingsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_02settingsOff.tga"/>
		<CheckBox RadioGroup="MainTabRadioGroup" Height="30" MarginBottom="2" ImageChecked="UI/Editor/MapEditor/rightpanel_03scriptsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_03scriptsOff.tga"/>
		<CheckBox RadioGroup="MainTabRadioGroup" Height="30" MarginBottom="2" ImageChecked="UI/Editor/MapEditor/rightpanel_04gamemodesOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_04gamemodesOff.tga"/>
		<CheckBox RadioGroup="MainTabRadioGroup" Height="30" MarginBottom="2" ImageChecked="UI/Editor/MapEditor/action.png" ImageUnchecked="UI/Editor/MapEditor/action_unchecked.png"/>
	</FlowContainer>
	<Icon ColumnID="Tabs" Height="30" MarginBotton="2" PressImg="UI/Editor/MapEditor/rightpanel_infoOn.tga" IdleImg="UI/Editor/MapEditor/rightpanel_infoOff.tga"  RolloverImg="UI/Editor/MapEditor/rightpanel_infoOver.tga" VerticalAlignment="Bottom" Name="BtnStats"/>
	
	
	<Include Path="Editors/MapEditor/MainWindow_SectionBrowser.xml"/>
	<Include Path="Editors/MapEditor/MainWindow_MapSetup.xml"/>
	<Include Path="Editors/MapEditor/MainWindow_Scripts.xml"/>
	<Include Path="Editors/MapEditor/MainWindow_GameModes.xml"/>
	<Include Path="Editors/MapEditor/MainWindow_Patterns.xml"/>
</GridContainer>