<GridContainer Visible="false" Name="GameModes">
	<Rows>
		<Row Height="40" ID="Title"/>
		<Row Height="1" ID="Border1"/>
		<Row Height="1*" ID="Content"/>
	</Rows>
	<Image RowID="Title" ColorMask="#5a6473"/>
	<Text RowID="Title" Style="InvertedText" Text="Game Settings" FontSize="18"/>
	<Image RowID="Border1" ColorMask="#000000"/>
	<GridContainer RowID="Content" Margin="5">
		<Rows>
			<Row Height="30" ID="ModeTitle"/>
			<Row Height="160" ID="ModeList"/>
			<Row Height="30" ID="Controls"/>
			<Row Height="30" ID="Buttons"/>
			
			<Row Height="10"/>
			
			<Row Height="30" ID="SettingControls"/>
			<Row Height="30" ID="SettingButtons"/>
			<Row Height="40" ID="PropertiesTitle"/>
			<Row Height="Auto" ID="Properties"/>
			<Row Height="30" ID="MiniMapTitle"/>
			<Row Height="150" ID="Minimap"/>
			<Row Height="Auto" ID="TestMap"/>
		</Rows>
		<Columns>
			<Column Width="1*"/>
			<Column Width="1*"/>
			<Column Width="1*"/>
		</Columns>
		
		<Image RowID="ModeTitle" ColumnSpan="3" ColorMask="#5a6473"/>
		<Text RowID="ModeTitle" Style="InvertedText" ColumnSpan="3" Text="Game Modes" FontSize="16"/>
		<ComboBox RowID="Controls" Column="0" ColumnSpan="2" Name="CBGameModes" FontSize="14" SelectionColor="#0088FF"/>
		<Icon RowID="Controls" Column="2" Style="SimpleButton" Text="Add Game Mode" Name="BtnAddGameMode"/>
		<ListBox RowID="ModeList" ColumnSpan="3" Name="LBGameModes" FontSize="14" SelectionColor="#0088FF"/>
		<Icon RowID="Buttons" Column="0" Text="Delete" ColumnSpan="3" Style="SimpleButton" Name="BtnDeleteGameMode" MarginTop="2"/>
		
		<Image RowID="PropertiesTitle" ColumnSpan="3" ColorMask="#5a6473" MarginTop="10"/>
		<Text RowID="PropertiesTitle" Style="InvertedText" ColumnSpan="3" Text="Properties" FontSize="16" MarginTop="10"/>
		<FlowContainer RowID="Properties" ColumnSpan="5">
		
			<GridContainer Height="30" MarginBottom="2">
				<Columns>
					<Column Width="80"/>
					<Column Width="1*"/>
				</Columns>
				
				<Text Row="0" Text="Map Setting"/>
				<ComboBox Row="0" Column="1" Margin="3" Name="CBMapSettings"/>
			</GridContainer>
			
			<GridContainer Height="30" MarginBottom="2">
				<Columns>
					<Column Width="80"/>
					<Column Width="1*"/>
				</Columns>
				
				<Text Row="0" Text="Size"/>
				<ComboBox Row="0" Column="1" Margin="3" Name="CbMapSize"/>
			</GridContainer>
			
			<GridContainer Height="30" MarginBottom="2">
				<Columns>
					<Column Width="80"/>
					<Column Width="1*"/>
				</Columns>
				
				<Text Row="0" Text="Category"/>
				<ComboBox Row="0" Column="1" Margin="3" Name="CbMapCategory"/>
			</GridContainer>
			
			<GridContainer Height="30" MarginBottom="2">
				<Columns>
					<Column Width="80"/>
					<Column Width="1*"/>
				</Columns>
				
				<Text Row="0" Text="Cabal Missions"/>
				<Container Height="30" MarginBottom="6" HAlign="right" Row="0" Column="1">
					<Loop Count="5" Variable="$X$" Offset="45,0">
						<Icon MarginTop="3" Size="40,25" Name="CabalMission$X$" InitPopup="bottomcenter,topcenter" AllImg="UI/Editor/MapEditor/cabalmission.tga" Style="SimpleButton"/>
					</Loop>
				</Container>
			</GridContainer>
			
			
			<Container>
				<Image Size="30,30" Image="UI/Editor/MapEditor/omsz.tga"/>
				<Container Height="30" MarginBottom="6" HAlign="right">
					<Loop Count="13" Variable="$X$" Offset="25,0">
						<Icon MarginTop="3" Size="24,24" Name="MapWeather$X$" InitPopup="bottomcenter,topcenter" AllImg="UI/Editor/MapEditor/default.tga"/>
					</Loop>
				</Container>
			</Container>
			
			<Icon Height="30" Margin="5" Text="Weather Scripting" Name="WeatherScriptingIcon" Style="SimpleButton"/>
			<Icon Height="30" Margin="5" Text="Map Ambient Sounds" Name="MapAmbSoundsIcon" Style="SimpleButton"/>
						
		</FlowContainer>
		
		
		<Image RowID="MiniMapTitle" ColumnSpan="3" ColorMask="#5a6473"/>
		<Text RowID="MiniMapTitle" Style="InvertedText" ColumnSpan="3" Text="Minimap" FontSize="16"/>
		<GridContainer RowID="Minimap" ColumnSpan="3" Height="100" MarginBottom="2">
			<Columns>
				<Column Width="1*"/>
				<Column Width="Auto"/>
			</Columns>
			<Rows>
				<Row Height="1*"/>
			</Rows>
			<Icon Style="SimpleButton" Column="0" Row="0" Text="Generate Minimap" MarginTop="30" MarginBottom="30" MarginRight="5" Name="BtnGenerateMinimap" Visible="0"/>
			<Image Column="1" RowSpan="3" Width="100" Name="MinimapImage"/>
			<Text Column="1" RowSpan="3" Text="No Image" Name="MinimapText" Visible="false"/>
		</GridContainer>
		<GridContainer RowID="TestMap" Column="0" ColumnSpan="3" Height="200">
			<Rows>
				<Row Height="5"/>
				<Row Height="40" ID="Title"/>
				<Row Height="5"/>
				<Row Height="1*" ID="GameMode"/>
				<Row Height="1*" ID="EnemyType"/>
				<Row Height="1*" ID="Difficulty"/>
				<Row Height="1*" ID="Settings"/>
				<Row Height="2*" ID="TestMap"/>
			</Rows>
			<Columns>
				<Column Width="80"/>
				<Column Width="1*"/>
			</Columns>
			<Image RowID="Title" ColumnSpan="2" ColorMask="#5a6473"/>
			<Text RowID="Title" ColumnSpan="2" Text="Map Testing Settings" Style="InvertedText" FontSize="16"/>
			<Text RowID="GameMode" Text="Game Mode"/>
			<ComboBox RowID="GameMode" Column="1" Margin="3" OpenUp="true" Name="CbTestGameMode"/>
			<Text RowID="EnemyType" Text="Enemy Type"/>
			<ComboBox RowID="EnemyType" Column="1" Margin="3" OpenUp="true" Name="CbEnemyType"/>
			<Text RowID="Difficulty" Text="Difficulty"/>
			<EditBox RowID="Difficulty" Column="1" Margin="3" Name="EbDifficulty" Text="0" TextAlignH="center" Graphics="UI/Element/Editor/EDITBOX"/>
			<CheckBox RowID="Settings" ColumnSpan="2" Text="God Mode" Name="TestGodMode"/>
			<CheckBox RowID="Settings" ColumnSpan="2" MarginLeft="150" Text="Terrain Only" Name="TestTerrainOnly"/>
			<GridContainer RowID="TestMap" ColumnSpan="2">
				<Rows>
					<Row Height="1*" ID="Test"/>
					<Row Height="1*" ID="TestPerf"/>
				</Rows>
				<Columns>
					<Column Width="1*"/>
					<Column Width="1*"/>
				</Columns>
				<Icon RowID="Test" Column="0" ColumnSpan="1" MarginTop="5" Text="Test Map" Style="SimpleButton" Name="BtnTestMap" InitPopup="bottomcenter,topcenter" Tooltip="Start the map normally"/>
				<Icon RowID="Test" Column="1" ColumnSpan="1" MarginTop="5" Text="Full Test" Style="SimpleButton" Name="BtnTestMapFull" InitPopup="bottomcenter,topcenter" Tooltip="Start the map with every random chance in scripts set to 100%"/>
				<Icon RowID="TestPerf" Column="0" ColumnSpan="1" MarginTop="5" Text="Perf. Test PC" Style="SimpleButton" Name="BtnTestMapPerformance" InitPopup="bottomcenter,topcenter" Tooltip="Start the map with performance testing for PC"/>
				<Icon RowID="TestPerf" Column="1" ColumnSpan="1" MarginTop="5" Text="Perf. Test Cons." Style="SimpleButton" Name="BtnTestMapPerformanceConsole" InitPopup="bottomcenter,topcenter" Tooltip="Start the map with performance testing for Console"/>
			</GridContainer>
		</GridContainer>
	</GridContainer>
</GridContainer>