<MapEditorWindow>	
	<Include Path="Common.xml"/>

	<StyleRules>
		<Rule Pattern="*[@Class='WaveSetup']//*" FontSize="20"/>
	</StyleRules>
	
	<Constants>
		<MenuBarHeight Value="30"/>
		<SideBarWidth Value="400"/>
		<TabsWidth Value="30"/>
		<StatusBarHeight Value="20"/>
		<WaveSetupWaveMax Type="int" Value="8"/>
		<WaveSetupDefenderMax Type="int" Value="6"/>
		<WaveSetupSpellMax Type="int" Value="6"/>
		<WaveSetupAttackerMax Type="int" Value="25"/>
		<WeatherSetupDisplayLimit Type="int" Value="10"/>
		<AmbientSetupDisplayLimit Type="int" Value="10"/>
	</Constants>

	<Constants>
		<GridSize Type="int" Value="40"/>
		<ScrollSpeed Type="float" Value="0.5"/>
		<ScrollMaxDistanceFromEdge Type="float" Value="0.05"/>
		<GateSize Type="float" Value="50"/>
		<SelectionColor Type="color" Value="#FFFF00"/>
		<CellSizeInMeters Type="float" Value="3.0"/>
	</Constants>

	<Dummy/>

	<GridContainer FillColor="@LightGrey" BorderWidth="1" ElementDirectory="Editor">
		<Rows>
			<Row Height="@MenuBarHeight" ID="MenuBar"/>
			<Row Height="1*" ID="Map"/>
			<Row Height="@StatusBarHeight" ID="StatusBar"/>
		</Rows>
		<Columns>
			<Column Width="1*" ID="Map"/>
			<Column Width="1" ID="MapRightBorder"/>
			<Column Width="@SideBarWidth" ID="SideBar"/>
		</Columns>
		<Image ColumnID="MapRightBorder" ColorMask="#000000"/>

		<!--Map Container-->
		<ScrollableContainer Name="MapScroller" RowID="Map" ColumnID="Map" VSlider="false" HSlider="false" Clickable="true" ScrollSpeed="-1">
			<Container Name="Map" Size="5000,5000" Clickable="true"/>
			<Image ColorMask="0,0.6,0.8" Alpha="0.4" Visible="false" Name="SelectionRect" Size="10,10"/>
		</ScrollableContainer>

		<!--Selection Info-->
		<FlowContainer RowID="Map" ColumnID="Map" Name="SelectionInfo" Width="300" HorizontalAlignment="Right" VerticalAlignment="Top" MarginRight="5" MarginTop="5" FillColor="#bec8d2" Visible="true">
			<XmlElement xml="Cfg/GUI/Editors/MapEditor/SelectionInfo_ScriptDummy.xml" Name="SelectionInfo_ScriptDummy"/>
			<XmlElement xml="Cfg/GUI/Editors/MapEditor/SelectionInfo_TypedDummy.xml" Name="SelectionInfo_TypedDummy"/>
			<XmlElement xml="Cfg/GUI/Editors/MapEditor/SelectionInfo_ObjectDummy.xml" Name="SelectionInfo_ObjectDummy"/>
			<XmlElement xml="Cfg/GUI/Editors/MapEditor/SelectionInfo_SoldierGroup.xml" Name="SelectionInfo_SoldierGroup"/>
			<XmlElement xml="Cfg/GUI/Editors/MapEditor/SelectionInfo_Objects.xml" Name="SelectionInfo_Objects"/>
		</FlowContainer>

		<!--Property Bar-->
		<ScrollableContainer RowID="Map" ColumnID="Map" Width="320" Height="840" HorizontalAlignment="Right" VerticalAlignment="Bottom" VSlider="true" HSlider="false" Name="PropertiesHolder" Visible="0">
			<Image ColorMask="#bec8d2"/>
			<FlowContainer Width="300" MarginRight="5" MarginBottom="5" Name="PropertiesPanel" FillColor="#bec8d2"/>
		</ScrollableContainer>
		
		<!--Side Bar-->
		<GridContainer RowID="Map" ColumnID="SideBar">
			<Include Path="Editors/MapEditor/MainWindow_SideBar.xml"/>
		</GridContainer>
			
		<!--Status Bar-->
		<GridContainer RowID="StatusBar" ColumnID="Map" ColumnSpan="3">
			<Include Path="Editors/MapEditor/MainWindow_StatusBar.xml"/>
		</GridContainer>
		
		<!--Tool Bar-->
		<FlowContainer RowID="Map" ColumnID="Map" Width="30" Pos="10,10">
			<RadioGroupLogical Name="ToolGroup"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#FF0000" Height="30" Tooltip="Sections"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#00FF00" Height="30" Tooltip="Move Dummies"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#0000FF" Height="30" Tooltip="Place Scripts"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#0000FF" Height="30" Tooltip="Place Dummies"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#0000FF" Height="30" Tooltip="Place Triggers"/>
			<CheckBox RadioGroup="ToolGroup" ColorMask="#0000FF" Height="30" Tooltip="Place Patterns"/>
		</FlowContainer>

		<!--Menu Bar-->
		<GridContainer RowID="MenuBar" ColumnID="Map" ColumnSpan="3" FillColor="#96aabe">
			<Include Path="Editors/MapEditor/MainWindow_MenuBar.xml"/>
		</GridContainer>

		<Include Path="Editors/MapEditor/MainWindow_Menus.xml"/>
		
		<!-- Stats Window-->
		<FlowContainer RowID="Map" ColumnID="Map" Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Left" Visible="false" Name="StatsWindow" FillColor="#757575" >
			<Container Height="30" >
				<Image ColorMask="@DarkGrey"/>
				<Icon ColorMask="@DarkGrey" Width="30" Text="X" Color="#000000" HorizontalAlignment="Right" Name="BtnCloseStats"/>
			</Container>
		</FlowContainer>
		
		<Container RowID="Map" ColumnID="Map" Class="WaveSetup" Name="WaveSetup" Visible="0">
			<Image ColorMask="@LightGrey"/>
			<Image ColorMask="@DarkGrey" Height="50"/>
			<Text Height="50" FontSize="20" Color="#ffffff" Text="Wave Setup"/>
			<FlowContainer Margin="5" MarginTop="50">
				<FlowContainer Height="40" Horizontal="1" Margin="10" MarginLeft="0">
					<Icon Size="200,40" ColorMask="#006600" Text="Add Wave" Name="AddWave"/>
					<Loop Count="@WaveSetupWaveMax" Variable="$X$">
						<Icon Width="150" ColorMask="@DarkGrey" Text="Wave $X$" Color="#ffffff" Name="WaveTab$X$" Visible="0"/>
						<Icon Pos="-20,0" Size="20,20" ColorMask="#880000" Text="×" MarginRight="-10" Color="#ffffff" Name="DeleteWave$X$" Visible="0"/>
					</Loop>
				</FlowContainer>
				<FlowContainer Name="WaveContainer">
					<Image ColorMask="@DarkGrey" Height="5" MarginTop="5" MarginBottom="5"/>
					<FlowContainer MarginLeft="20" MarginBottom="5" Horizontal="1" Name="Defenders">
						<Icon ColorMask="#006600" Text="Add Defender" Size="130,30" MarginRight="5" Name="AddDefender"/>
						<Loop Count="@WaveSetupDefenderMax" Variable="$X$">
							<ComboBox Size="200,30" Text="0" Name="DefenderCB$X$" FontSize="10" TextAlignH="left"/>
							<Icon Size="20,30" ColorMask="#880000" Text="×" MarginRight="5" Color="#ffffff" Name="DefenderDel$X$"/>
						</Loop>
					</FlowContainer>
					<FlowContainer MarginLeft="20" MarginBottom="5" Horizontal="1" Name="WorldSkills">
						<Icon ColorMask="#006600" Text="Add Skill" Size="130,30" MarginRight="5" Name="AddWorldSpell"/>
						<Loop Count="@WaveSetupSpellMax" Variable="$X$">
							<ComboBox Size="200,30" Text="Skill1" Name="SpellCB$X$"/>
							<Icon Size="20,30" ColorMask="#880000" Text="×" MarginRight="5" Color="#ffffff" Name="SpellDel$X$"/>
						</Loop>
					</FlowContainer>
					<Image MarginLeft="20" ColorMask="@DarkGrey" Height="5" MarginTop="5" MarginBottom="5"/>
					<Loop Count="@WaveSetupAttackerMax" Variable="$X$">
						<FlowContainer MarginLeft="20" MarginBottom="5" Horizontal="1" Name="AttackerFC$X$" Visible="0">
							<ComboBox ColorMask="@MidGrey" Text="Average_melee_normal" Size="250,30" MarginRight="25" Name="AttackerName$X$"/>
							<ComboBox ColorMask="@MidGrey" Text="Route 1" Size="100,30" MarginRight="25" Name="AttackerRoute$X$"/>
							<EditBox ColorMask="@MidGrey" Text="00" Size="50,30" Name="AttackerMinute$X$" Graphics="UI/Element/Editor/EDITBOX"/>
							<Text Text=":" Width="10"/>
							<EditBox ColorMask="@MidGrey" Text="14" Size="50,30" MarginRight="5" Name="AttackerSecond$X$" Graphics="UI/Element/Editor/EDITBOX"/>
							<Icon Size="30,30" ColorMask="#880000" Text="×" Name="DeleteAttacker$X$"/>
						</FlowContainer>
					</Loop>
					<Icon MarginLeft="20" ColorMask="#006600" Text="Add Attacker" Size="250,40" MarginRight="5" Name="AddAttacker"/>
					<Image ColorMask="@DarkGrey" Height="5" MarginTop="5" MarginBottom="5"/>
				</FlowContainer>
			</FlowContainer>
			<Icon ColorMask="@DarkGrey" Size="150,50" Text="OK" HAlign="right" VAlign="bottom" Margin="10" Name="WaveSetupOK"/>
		</Container>
	</GridContainer>

	<GridContainer Size="1300,800" HorizontalAlignment="Center" VerticalAlignment="Center" Visible="false" FillColor="@DarkGrey" Name="ErrorListWindow">
		<Rows>
			<Row Height="1*"/>
			<Row Height="60"/>
		</Rows>
		<ScrollableContainer Margin="10" Row="0">
			<FlowContainer Name="ErrorList"/>
		</ScrollableContainer>
		<Icon Row="1" ColorMask="#FF0000" Text="OK" Width="100" MarginRight="5" HorizontalAlignment="Right" Name="ValidationOK"/>
	</GridContainer>
	
	
	<GridContainer Size="840,940" HorizontalAlignment="Center" VerticalAlignment="Center" FillColor="@DarkGrey" Name="LoadSectionSetups" Visible="false">
		<Rows>
		  <Row Height="40"/>
		  <Row Height="40"/>
		  <Row Height="1*"/>
		  <Row Height="30"/>
		</Rows>
		<Columns>
		  <Column Width="1*"/>
		  <Column Width="1*"/>
		</Columns>
		<Image Row="0" ColumnSpan="2" ColorMask="#5a6473"/>
		<Text Row="0" ColumnSpan="2" Text="Load Section Template" Style="InvertedText" FontSize="13"/>
		<CheckBox Row="1" ColumnSpan="2" Name="AlternateTemplateLoad" Text="Alternate template load type" Style="InvertedText" FontSize="13" InitPopup="bottomcenter,topcenter" Tooltip="Nem törli ki a script, gamemode, start, checkpoint dummykat és a soldier groupokat"/>
		<ListBox Row="2" ColumnSpan="2" Name="LoadSectionSetupsList" ElementDirectory="Editor" Visible="false"/>
		<ScrollableContainer Row="2" ColumnSpan="2">
			<GridContainer VAlign="top" Name="SectionSetupGrid"/>
		</ScrollableContainer>
		<Icon Style="SimpleButton" Row="3" Column="0" Text="OK" Name="LoadSectionSetupsOK"/>
		<Icon Style="SimpleButton" Row="3" Column="1" Text="Cancel" Name="LoadSectionSetupsCancel"/>
	</GridContainer>
	
	<Scene3D Name="Fake3D" Pos="-1,-1" Size="1,1"	/>
	
	<Container MarginLeft="10" MarginBottom="30" HAlign="left" VAlign="bottom" ElementDirectory="Editor" Name="DummySizeControls" Visible="0">
		<FlowContainer Horizontal="true" Height="50" FillColor="@DarkGrey">
			<Text Style="InvertedText" FontSize="13" MarginLeft="5" MarginRight="5">Dummy Size</Text>
			<Slider Width="1200" RangeMax="150" Name="DummySizeSlider"/>
			<Text Style="InvertedText" FontSize="15" Width="50" MarginLeft="5" MarginRight="5" Name="DummySizeText">0.0</Text>
			<Text Style="InvertedText" FontSize="13" MarginLeft="5" MarginRight="5">Old value: </Text>
			<Text Style="InvertedText" FontSize="13" Width="60" MarginLeft="2" MarginRight="5" Name="DummySizeTextOriginal">0.0</Text>
		</FlowContainer>
	</Container>
	
	<Container Name="LoadingScreen">
		<Image Image="UI/OpenWorld/starmap_system.tga"/>
		<Text Text="Loading Map Editor..."
			Size="200,50"
			Pos="880,515"
			TextAlignH="center"
			TextAlignV="center"
			FontType="Electrolize" FontSize="22" Color="#ffffff" Sharpness="0.5" OutlineColor="0x666bffff" FontOutlineWidth="20" OutlineSharpness="2" OutlineOffset="0.0"
		/>
	</Container>
	
	<!-- AMBIENT SOUND SUBWINDOW -->
	<Container VAlign="Center" HAlign="Center" ElementDirectory="Editor" Name="AmbSoundSubWindow" Visible="0">
		<Image ColorMask="#555555"/>
		<FlowContainer>
			<FlowContainer Horizontal="1" Height="40">
				<Text MarginLeft="5" Width="580">Ambient Sound Event</Text>
			</FlowContainer>
			<Loop Count="@AmbientSetupDisplayLimit" Variable="$X$">
				<FlowContainer Horizontal="1" Height="40" Margin="5">
					<EditBox  MarginLeft="10" MarginRight="10" Name="AmbEventName_$X$" Width="500" Graphics="UI/Element/Editor/EDITBOX"/>
					<Icon Size="30,30" ColorMask="#880000" Text="-" MarginLeft="5" VAlign="Center" Name="DeleteAmbEntry_$X$"/>
				</FlowContainer>
			</Loop>
			<FlowContainer Horizontal="1" Height="40" Margin="5">
				<Icon Width="40" ColorMask="#008800" Text="+" Name="AddAmbEntry"/>
			</FlowContainer>
			<Icon Size="120, 40" ColorMask="#333333" Text="Ok" HAlign="Center" Name="AmbSoundWindOk"/>
		</FlowContainer>		
	</Container>	
	
	<!-- WEATHER SETUP SUBWINDOW -->
	<Container VAlign="Center" HAlign="Center" ElementDirectory="Editor" Name="WeaponScriptingSubWindow" Visible="0">
		<Image ColorMask="#555555"/>
		<FlowContainer>
			<FlowContainer Horizontal="1" Height="40">
				<Text MarginLeft="5" Width="120">Event</Text>
				<Text MarginLeft="5" Width="120">Time/Name</Text>
				<Text MarginLeft="5" Width="150">Weather</Text>
				<Text MarginLeft="5" Width="110">Easing</Text>
				<Text MarginLeft="5" Width="100">Switch</Text>
				<Text MarginLeft="5" Width="100">Update</Text>
				<Text MarginLeft="5" Width="80">Change Time</Text>
			</FlowContainer>
			<Loop Count="@WeatherSetupDisplayLimit" Variable="$X$">
				<FlowContainer Horizontal="1" Height="40" Margin="5">
					<ComboBox MarginLeft="5" Name="EventType_$X$" Width="120"/>
					<EditBox  MarginLeft="5" Name="TimeName_$X$" Width="120" Graphics="UI/Element/Editor/EDITBOX"/>
					<ComboBox MarginLeft="5" Name="WeatherType_$X$" Width="150"/>
					<ComboBox MarginLeft="5" Name="EasingType_$X$" Width="110"/>
					<ComboBox MarginLeft="5" Name="SwitchType_$X$" Width="100"/>
					<ComboBox MarginLeft="5" Name="UpdateType_$X$" Width="100"/>
					<EditBox  MarginLeft="5" Name="ChangeTime_$X$" Width="80" Graphics="UI/Element/Editor/EDITBOX"/>
					<Icon Size="30,30" ColorMask="#880000" Text="-" MarginLeft="5" VAlign="Center" Name="DeleteEntry_$X$"/>
				</FlowContainer>
			</Loop>
			<FlowContainer Horizontal="1" Height="40" Margin="5">
				<Icon Width="40" ColorMask="#008800" Text="+" Name="AddWeatherEntry"/>
				<Text MarginLeft="580" Text="Light Angle"/>
				<EditBox Width="85" MarginLeft="5" Text="0.00" Name="LightDir" Graphics="UI/Element/Editor/EDITBOX"/>
			</FlowContainer>
			<Icon Size="120, 40" ColorMask="#333333" Text="Ok" HAlign="Center" Name="WeatherScriptingOk"/>
		</FlowContainer>
		<Icon Size="25,25" Margin="10" ColorMask="#333333" HAlign="Right" FontType="Grace" Text="▲" Name="WeatherSetupScrollUp"/>
		<Icon Size="25,25" Margin="10" ColorMask="#333333" VAlign="Bottom" FontType="Grace" HAlign="Right" Text="▼" Name="WeatherSetupScrollDown"/>
	</Container>
	<!-- WEATHER SETUP SUBWINDOW -->
</MapEditorWindow>