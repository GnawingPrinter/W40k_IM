<GridContainer Name="SectionBrowser">
	<Rows>
		<Row Height="40" ID="Title"/>
		<Row Height="1" ID="Border1"/>
		<Row Height="1*" ID="Content"/>
	</Rows>
	<Image RowID="Title" ColorMask="#5a6473"/>
	<Text RowID="Title" Style="InvertedText" Text="Sections" FontSize="18"/>
	<Image RowID="Border1" ColorMask="#000000"/>
	<GridContainer RowID="Content">
		<Rows>
			<Row Height="40" ID="MapName"/>
			<Row Height="1" ID="Border2"/>
			<Row Height="1*" ID="Content"/>
			<Row Height="1" ID="Border3"/>
			<Row Height="30" ID="Filters"/>
			<Row Height="40" ID="MapType"/>
			<Row Height="120" ID="Tags"/>
			<Row Height="40" ID="SaveLoad"/>
		</Rows>
		<Columns>
			<Column Width="100"/>
			<Column Width="1*"/>
		</Columns>
		<EditBox RowID="MapName" ColumnSpan="2" Text="Map Name" Margin="5" Name="MapName" FontSize="14" Graphics="UI/Element/Editor/EDITBOX"/>
		<Text RowID="MapType" Text="Map Type" Margin="5" FontSize="14" TextAlignH="Left" MarginLeft="10"/>
		<Text RowID="Filters" ColumnSpan="2" Text="Filters"/>
		<ComboBox RowID="MapType" Column="1" Margin="5" Name="MapType" FontSize="14" OpenUp="true"/>
		<Image RowID="Border3" ColumnSpan="2" ColorMask="#000000"/>
		<Image RowID="Border2" ColumnSpan="2" ColorMask="#000000"/>
		<GridContainer RowID="Tags" ColumnSpan="2" Margin="10" MarginTop="0">
			<Columns>
				<Column Width="1*"/>
				<Column Width="1*"/>
			</Columns>
			<Rows>
				<Row Height="1*"/>
				<Row Height="1*"/>
				<Row Height="1*"/>
				<Row Height="1*"/>
			</Rows>
			<CheckBox Row="0" Column="0" Text="Room" Name="Tag_Room"/>
			<CheckBox Row="0" Column="1" Text="Passage" Name="Tag_Passage"/>
			<CheckBox Row="1" Column="0" Text="Dead End" Name="Tag_DeadEnd"/>
			<CheckBox Row="1" Column="1" Text="Arena" Name="Tag_Arena"/>
			<CheckBox Row="2" Column="0" Text="Background" Name="Tag_Background"/>
			
			<CheckBox Row="3" Column="0" Text="Show on map" Name="Show_on_map"/>
		</GridContainer>
		
		<GridContainer RowID="SaveLoad" ColumnSpan="2">
			<Columns>
				<Column Width="1*"/>
				<Column Width="1*"/>
			</Columns>
			
			<Icon Column="0" Style="SimpleButton" Text="Save Template" Name="SectionSetupSave"/>
			<Icon Column="1" Style="SimpleButton" Text="Load Template" Name="SectionSetupLoad"/>
		</GridContainer>

		<GridContainer RowID="Content" ColumnSpan="2" Margin="0" FillColor="#3a4453">
			<ScrollableContainer  Margin="5">
				<GridContainer Name="SectionLibrary" VerticalAlignment="Top"/>
			</ScrollableContainer>
		</GridContainer>
	</GridContainer>
</GridContainer>