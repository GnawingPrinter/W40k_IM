<DecalStatElement>
	<GridContainer Height="30" BorderWidth="1" FillColor="@MidGrey">
		<Rows>
			<Row Height="1*"/>
		</Rows>
		<Columns>
			<Column Width="3*"/>
			<Column Width="1*"/>
			<Column Width="1*"/>
		</Columns>
		<Text Row="0" Column="0" Name="StatName" FontSize="16">Stat Name</Text>
		<Text Row="0" Column="1" Name="StatValue" FontSize="16">0</Text>
		<Icon Row="0" Column="2" Name="SelectionButton" Width="70" Height="20" Text="Select All" VerticalAlignment="center" HorizontalAlignment="center" ColorMask="@Grey"/>
	</GridContainer>
</DecalStatElement>
