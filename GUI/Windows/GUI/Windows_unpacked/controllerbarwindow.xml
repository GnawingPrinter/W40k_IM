<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<Window Pos="33,995" GuiAlign="bottomcenter">
	<Include Path="Windows/Styles.xml"/>
	
	<Constants>
		<MaxButtonCount Type="int" Value="7"/>
	</Constants>
	
	<Container Name="ControllerBar">
		<Image
			Pos="0,0"
			Size="1855,48"
			Image="UI/common/XBOX/Controller_button_background.tga"
		/>
		<Container Pos="60,0" Size="1735,48">
			<FlowContainer Name="LeftList" Horizontal="1" HAlign="left">
				<Loop Count="@MaxButtonCount" Variable="$X$">
					<XBOXButton Name="LeftButton$X$"
						Height="48"
						SetButton="A"
						Style="XBoxButtonFont"
					/>
					<Image Name="LeftSeparator$X$"
						MarginTop="3"
						MarginLeft="10"
						Size="4,42"
						Image="UI/common/XBOX/Controller_button_separator.tga"
					/>
				</Loop>
			</FlowContainer>
			<FlowContainer Name="RightList" Horizontal="1" HAlign="right">
				<XBOXButton Name="RightButton"
					Height="48"
					SetButton="B"
					Style="XBoxButtonFont"
				/>
			</FlowContainer>
		</Container>
	</Container>
</Window>
