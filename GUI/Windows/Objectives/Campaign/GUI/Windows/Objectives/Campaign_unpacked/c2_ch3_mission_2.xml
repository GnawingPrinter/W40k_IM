<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<Window Size="0,0">
	<Include Path="Windows/Objectives/ExtraObjectives.xml"/>

	<Constants>
		<DisableMouseSense Type="bool" Value="0"/>
		<ObjectiveCount Type="int" Value="13"/>
	</Constants>

	<FlowContainer Width="300" VerticalAlignment="bottom">	
		<Text Name="Title" MarginLeft="17" MarginTop="4" Size="280,32" Style="Headline_Large_Color_Glow" TextAlignH="left" TextAlignV="center"/>
		<FlowContainer
			Width="300"
			BackgroundTopSize="36"
			BackgroundBotSize="26"
			BackgroundTopImage="UI/objectives/objectives_backgroundTop.tga"
			BackgroundMidImage="UI/objectives/objectives_backgroundMiddle.tga"
			BackgroundBotImage="UI/objectives/objectives_backgroundBottom.tga"
		>
			<Dummy Height="25"/>
			<FlowContainer Name="Datahunt">
				<Text Name="CluesCollected" Style="Text_Large_Light_Glow" TextAlignH="center" TextAlignV="center" Text="mission.Datahunt.clues_collected"/>
				<Container>
					<FlowContainer Horizontal="1" HorizontalAlignment="center">
						<Image Name="Data1" Size="48,48" MarginLeft="5" MarginRight="5" Image="UI/Objectives/objective_iconDatahuntOn.tga"/>
						<Image Name="Data2" Size="48,48" MarginLeft="5" MarginRight="5" Image="UI/Objectives/objective_iconDatahuntOn.tga"/>
						<Image Name="Data3" Size="48,48" MarginLeft="5" MarginRight="5" Image="UI/Objectives/objective_iconDatahuntOn.tga"/>
					</FlowContainer>
				</Container>
			</FlowContainer>
			
			<FlowContainer Name="Tasks">
				<Loop Count="@ObjectiveCount" Variable="$X$">
					<Container Name="Objective$X$_Off">
						<CheckBox MarginLeft="15" Size="24,24" VAlign="center" ImageUnchecked="UI/Objectives/objectives_checkboxOff.tga" Checked="0" MouseSenseEnabled="0"/>
						<TextBox Name="Objective$X$_OffTextBox" VAlign="top" MarginLeft="45" Width="240" Style="Text_Normal_Light" Color="#54f1eb" TextAlignH="left" TextAlignV="center" UseSlider="0" MouseSenseEnabled="0"/>
					</Container>
					<Container Name="Objective$X$_On">
						<CheckBox MarginLeft="15" Size="24,24" VAlign="center" ImageChecked="UI/Objectives/objectives_checkboxOn.tga" Checked="1" MouseSenseEnabled="0"/>
						<TextBox Name="Objective$X$_OnTextBox" VAlign="top" MarginLeft="45" Width="240" Style="Text_Normal_Light" TextAlignH="left" TextAlignV="center" UseSlider="0" MouseSenseEnabled="0"/>
					</Container>
				</Loop>
			</FlowContainer>
			<Dummy Height="27"/>
			
		</FlowContainer>
		<Dummy Height="20"/>

	</FlowContainer>
</Window>


