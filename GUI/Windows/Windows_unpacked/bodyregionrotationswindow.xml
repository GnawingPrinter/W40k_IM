<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>	
<Window>

	<Styles>
		<TextLeft Color="#000000" FontSize="12" TextAlignH="Left" FontType="PT Sans"/>
		<TextRight Color="#000000" FontSize="12" TextAlignH="right" FontType="PT Sans"/>
		<TextTitle Color="#000000" FontSize="16" TextAlignH="Left" FontType="PT Sans"/>
		<TextEdit Color="#FFFFFF" FontSize="14" TextAlignH="Left" TextAlignV="Center" FontType="PT Sans" />
	</Styles>
	
	<GridContainer Size="400,600" FillColor="#666666" HorizontalAlignment="right" MarginTop="100" BorderColor="0xffff00ff" BorderWidth="1" >
		<Rows>
			<Row Height="50" />
			<Row Height="250" />
			<Row Height="1*" />
		</Rows>
		<Columns>
			<Column Width="1*"/>		
		</Columns>
		<Text 
			Row="0" 
			Column="0" 
			Name="SelectedSoldierName" 
			Style="TextTitle" 
			MarginLeft="10" 
		/>
		<GridContainer Row="1" BorderColor="0xffff00ff" BorderWidth="1" >
			<Rows>
				<Row Height="1*"/>
				<Row Height="1*"/>
				<Row Height="1*"/>
				<Row Height="1*"/>
				<Row Height="1*"/>
			</Rows>
			<Columns>
				<Column Width="1*"/>		
			</Columns>
			<Text 
				Row="0" 
				Name="RegionName" 
				Style="TextLeft" 
				MarginLeft="25" 
			/>
			<ComboBox
				Row="0" 
				Color="#FFFFFF" 
				HorizontalAlignment="Right" 
				Name="BodyRegionCB" 
				Width="200" 
				Height="50" 
			/>
			<Text 
				Row="1" 
				Name="HorizontalBoneName" 
				Text="Horizontal BoneID"
				Style="TextLeft" 
				MarginLeft="35" 
			/>
			<ComboBox 
				Row="1" 
				Name="HorizontalBoneCB"  
				Style="TextEdit"  
				MarginLeft="190" 
				Width="150" 
				Height="40" 
			/>
			<Icon
				Row="1"
				Name="TestRotateHorizontal"
				Size="45,45"
				HorizontalAlignment="right"
			/>
			<Text 
				Row="2" 
				Name="Horizontal" 
				Style="TextLeft" 
				MarginLeft="45" 
			/>
			
			<Text 
				Row="3" 
				Name="VerticalBoneName" 
				Text="Vertical BoneID"
				Style="TextLeft" 
				MarginLeft="35" 
			/>
			<ComboBox 
				Row="3" 
				Name="VerticalBoneCB"  
				Style="TextEdit"  
				MarginLeft="190" 
				Width="150" 
				Height="40" 
			/>
			<Icon
				Row="3"
				Name="TestRotateVertical"
				Size="45,45"
				HorizontalAlignment="right"
			/>
			<Text 
				Row="4" 
				Name="Vertical" 
				Style="TextLeft" 
				MarginLeft="45" 
			/>
			
		</GridContainer>
		
		<Text
			Row="2" 
			Height="20"
			Text="Horizontal" 
			Style="TextLeft" 
			MarginLeft="5" 
		/>
		
		<Text
			Row="2" 
			Height="20"
			Text="Vertical" 
			Style="TextLeft" 
			MarginLeft="5" 
			MarginTop="30"
		/>
		
		<Slider
			Row="2"
			Name="HorizontalSlider"
			Size="180,20"
			MarginLeft="95" 
		/>
		
		<Slider
			Row="2"
			Name="VerticalSlider"
			Size="180,20"
			MarginLeft="95"
			MarginTop="30"
		/>
		
	</GridContainer>
	
</Window>

