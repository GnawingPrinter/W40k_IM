<GridContainer Name="SelectionDummy" FillColor="@MidGrey">
	<Rows>
		<Row ID="Title" Height="28"/>
		<Row Height="1"/>
		<Row ID="DummyName" Height="40" MarginStart="10" MarginEnd="6"/>
		<Row ID="DummyType" Height="64" MarginStart="4" MarginEnd="4"/>
		<Row ID="Checkboxes" Height="28" MarginEnd="4"/>
		<Row Height="2"/>
		<Row Height="1*" MarginStart="4"/>
		<Row Height="1"/>
	</Rows>
	<Image Column="0" RowID="Title" Image="while.tga" ColorMask="@DarkGrey"/>
	<Text Column="0" RowID="Title" Text="Selected" Style="InvertedText"/>

	<Image Row="1" ColorMask="#000000"/>
	<GridContainer RowID="DummyName">
		<Columns>
			<Column Width="50" MarginStart="20"/>
			<Column Width="1*" MarginEnd="10"/>
		</Columns>
		<Image Name="DummyIcon" Pos="0,0" Size="24,24" Column="0" Image="UI/Editor/MapEditor/dummy_groupOff.tga"/>
		<EditBox Column="1" ElementDirectory="Editor" Name="DummyName" Style="NormalText" HighlightColor="#777777"/>
	</GridContainer>
	<GridContainer RowID="DummyType">
		<Rows>
			<Row Height="1*"/>
			<Row Height="1*"/>
		</Rows>
		<Columns>
			<Column Width="50" MarginEnd="4"/>
			<Column Width="156" MarginEnd="10"/>
			<Column Width="1*" MarginEnd="10"/>
		</Columns>
		<Text Column="0" Text="Type" TextAlignH="Right" FontType="@BasicFont" Color="#666666" FontSize="10"/>
		<ComboBox Column="1" Name="DummyType" Style="NormalText"/>
		<Text Row="1" Column="0" Name="DummyGroupTypeLabel" Text="Group" TextAlignH="Right" FontType="@BasicFont" Color="#666666" FontSize="10"/>
		<ComboBox Row="1" Column="1" Name="DummyGroupType" Style="NormalText"/>
	</GridContainer>
	
	<GridContainer RowID="Checkboxes">
		<Columns>
			<Column Width="50"/>
			<Column Width="1*"/>
			<Column Width="1*"/>
		</Columns>
		<CheckBox Column="1" Text="Active" Name="ChkDummyActive" Pos="0,4" Size="100,16" FontType="@BasicFont" Color="#333333" HighlightColor="#777777" ImageChecked="UI/Editor/MapEditor/checkboxOn_off.tga" ImageUnchecked="UI/Editor/MapEditor/checkboxOff_off.tga"/>
		<CheckBox Column="2" Text="Objective" Name="ChkDummyObjective" Pos="0,4" Size="100,16" FontType="@BasicFont" Color="#333333" HighlightColor="#777777" ImageChecked="UI/Editor/MapEditor/checkboxOn_off.tga" ImageUnchecked="UI/Editor/MapEditor/checkboxOff_off.tga"/>
	</GridContainer>
	<Image Row="5" ColorMask="#000000"/>
	<Image Row="7" ColorMask="#000000"/>
</GridContainer>