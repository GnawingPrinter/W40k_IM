<Window ElementDirectory="Editor">
	<Include Path="Cfg/GUI/Templates/MapEditor/Common.xml"/>
	<Constants>
		<GridSize Type="int" Value="40"/>
		<ScrollSpeed Type="float" Value="0.5"/>
		<ScrollMaxDistanceFromEdge Type="float" Value="0.05"/>
		<GateSize Type="float" Value="50"/>
		<SelectionColor Type="color" Value="#FFFF00"/>
		<CellSizeInMeters Type="float" Value="3.0"/>
	</Constants>

	<GridContainer FillColor="@LightGrey" Clickable="true">
		<Rows>
			<Row ID="MenuBar" Height="24"/>
			<Row ID="MenuBorder" Height="2"/>
			<Row ID="Content" Height="1*"/>
		</Rows>
		
		<!--********* Menu bar **********-->
		<GridContainer RowID="MenuBar" FillColor="@MidGrey">
			<Columns>
				<Column Width="60"/>
				<Column Width="60"/>
				<Column Width="60"/>
				<Column Width="80"/>
				<Column Width="1*"/>
				<Column Width="30" ID="Exit"/>
			</Columns>
			<Rows>
				<Row Height="1*"/>
				<Row Height="0"/>
			</Rows>
			<Icon Column="0" Style="NormalText" Text="File" Name="OpenFileMenu"/>
			<Icon Column="1" Style="NormalText" Text="Options"/>
			<Icon Column="2" Style="NormalText" Text="View"/>
			<Icon Column="3" Style="NormalText" Text="Resolution"/>
			<Icon ColumnID="Exit" Name="Exit" Tooltip="Exit" Text="X" Style="NormalText" FontSize="12"/>
			<XmlElement Row="1" Name="FileMenu" xml="Cfg/GUI/Templates/MapEditor/Menu/File.xml" Size="150,170" Topmost="true" IgnoreScissor="true" Visible="false"/>
		</GridContainer>

		<GridContainer RowID="MenuBorder" FillColor="@DarkGrey"/>

		<GridContainer RowID="Content">
			<Columns>
				<Column ID="Content" Width="1*"/>
				<Column ID="Options" Width="380" MarginStart="5"/>
			</Columns>
			<GridContainer ColumnID="Content">
				<Rows>
					<Row ID="ToolBar" Height="40" MarginStart="6" MarginEnd="6"/>
					<Row ID="DocumentTabs" Height="@TabsHeight"/>
					<Row ID="DocumentTabsBorder" Height="2"/>
					<Row ID="Content" Height="1*"/>
					<Row ID="StatusBar" Height="40"/>
				</Rows>
				
				<!--********* Tool bar **********-->
				<RadioGroupLogical Name="ToolGroup"/>
				<GridContainer RowID="ToolBar" Name="ToolBar">
					<Columns>
						<Column Width="20"/>
						<Column Width="28" ID="SectionSelect"/>
						<Column Width="28" ID="GroupSelect"/>
						<Column Width="15"/>
						<Column Width="2" ID="Separator1"/>
						<Column Width="15"/>
						<Column Width="28" ID="StartDummy"/>
						<Column Width="28" ID="ReinforcementDummy"/>
						<Column Width="28" ID="WaveDummy"/>
						<Column Width="28" ID="WayPointDummy"/>
						<Column Width="28" ID="CustomDummy"/>
						<Column Width="15"/>
						<Column Width="2" ID="Separator2"/>
						<Column Width="15"/>
						<Column Width="28" ID="LargeGroupDummy"/>
						<Column Width="104" ID="GroupType" MarginStart="4"/>
						<Column Width="15"/>
						<Column Width="2" ID="Separator3"/>
						<Column Width="15"/>
						<Column Width="40" ID="ZoomText"/>
						<Column Width="2"/>
						<Column Width="60" ID="Zoom"/>
						<Column Width="28" ID="FitZoom"/>
						<Column Width="1*"/>
						<Column Width="100" ID="Enemies"/>
						<Column Width="10"/>
						<Column Width="100" ID="GodMode"/>
						<Column Width="10"/>
						<Column Width="100" ID="GameMode"/>
						<Column Width="16"/>
						<Column Width="120" ID="TestMap"/>
						<Column Width="4"/>
					</Columns>
					
					<!--A toolgroup-ba tartozo checkboxok sorrendjere szamitunk a kodban, ha fel akarod cserelni, inkabb a columnok sorrendjet cserelgesd-->
					<CheckBox RadioGroup="ToolGroup" ColumnID="SectionSelect" Name="SectionSelect" ImageChecked="UI/Editor/MapEditor/tools_sectionOn.tga" ImageUnchecked="UI/Editor/MapEditor/tools_sectionOff.tga" Tooltip="Select Section" Checked="true"/>
					<CheckBox RadioGroup="ToolGroup" ColumnID="GroupSelect" Name="GroupSelect" ImageChecked="UI/Editor/MapEditor/tools_dummyOn.tga" ImageUnchecked="UI/Editor/MapEditor/tools_dummyOff.tga" Tooltip="Select Dummies"/>
					<Image ColumnID="Separator1" Image="UI/Editor/MapEditor/separator_v.dds" ColorMask="@MidGrey"/>

					<CheckBox  RadioGroup="ToolGroup" ColumnID="StartDummy" Name="StartDummy" ImageChecked="UI/Editor/MapEditor/dummy_startOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_startOff.tga" Tooltip="Starting Position"/>
					<CheckBox  RadioGroup="ToolGroup" ColumnID="ReinforcementDummy" Name="ReinforcementDummy" ImageChecked="UI/Editor/MapEditor/dummy_reinfOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_reinfOff.tga" Tooltip="Reinforcement Dummy"/>
					<CheckBox  RadioGroup="ToolGroup" ColumnID="WaveDummy" Name="WaveDummy" ImageChecked="UI/Editor/MapEditor/dummy_waveOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_waveOff.tga" Tooltip="Wave Dummy"/>
					<CheckBox  RadioGroup="ToolGroup" ColumnID="WayPointDummy" Name="WayPointDummy" ImageChecked="UI/Editor/MapEditor/dummy_waypointOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_waypointOff.tga" Tooltip="Waypoint Dummy"/>
					<CheckBox  RadioGroup="ToolGroup" ColumnID="CustomDummy" Name="CustomDummy" ImageChecked="UI/Editor/MapEditor/dummy_customOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_customOff.tga" Tooltip="Custom Dummy"/>
					<Image ColumnID="Separator2" Image="UI/Editor/MapEditor/separator_v.dds" ColorMask="@MidGrey"/>

					<CheckBox RadioGroup="ToolGroup" ColumnID="LargeGroupDummy" Name="LargeGroupDummy" ImageChecked="UI/Editor/MapEditor/dummy_groupOn.tga" ImageUnchecked="UI/Editor/MapEditor/dummy_groupOff.tga" Tooltip="Large Group Dummy"/>
					<ComboBox ColumnID="GroupType" Name="GroupType" ElementDirectory="Editor" Color="#333333" HighlightColor="#666666" FontType="@BasicFont" FontSize="9" Pos="0,4" Size="100,20"/>
					<Image ColumnID="Separator3" Image="UI/Editor/MapEditor/separator_v.dds" ColorMask="@MidGrey"/>
					
					<Text ColumnID="ZoomText" Text="Zoom " TextAlignH="Right" FontType="@BasicFont" Color="#333333" FontSize="9"/>
					<ComboBox ColumnID="Zoom" Name="Zoom" Color="#333333" HighlightColor="#666666" FontType="@BasicFont" FontSize="9" Pos="0,4" Size="60,20"/>
					<Icon ColumnID="FitZoom" Name="FitZoom" IdleImg="UI/Editor/MapEditor/zoom_fitOff.tga" Tooltip="Scale View To Fit"/>

					<CheckBox ColumnID="Enemies" Name="Enemies" Text="Enemies" Pos="0,6" Size="100,16" FontType="@BasicFont" Color="#333333" HighlightColor="#777777" ImageChecked="UI/Editor/MapEditor/checkboxOn_off.tga" ImageUnchecked="UI/Editor/MapEditor/checkboxOff_off.tga" Tooltip="Enables enemies while testing map"/>
					<CheckBox ColumnID="GodMode" Name="GodMode" Text="GodMode" Pos="0,6" Size="100,16" FontType="@BasicFont" Color="#333333" HighlightColor="#777777" ImageChecked="UI/Editor/MapEditor/checkboxOn_off.tga" ImageUnchecked="UI/Editor/MapEditor/checkboxOff_off.tga" Tooltip="Enables God Mode while testing map"/>
					<ComboBox ColumnID="GameMode" Name="GameMode" Pos="0,4" Size="100,20"/>
					<Icon ColumnID="TestMap" Name="TestMap" IdleImg="UI/Editor/MapEditor/button_off.dds" ColorMask="0.96,0.96,0.96" Text="Test Map" Tooltip="Launches the game on the edited map" Style="NormalText"/>
				</GridContainer>

				<ScrollableContainer RowID="DocumentTabs" HSlider="false" VSlider="false">
					<GridContainer Name="DocumentTabs" Size="1,1">
						<Columns>
							<Column Width="@TabsHeight"/>
						</Columns>
						<Icon Column="0" IdleImg="white.tga" ColorMask="@MidGrey" Text="+" Name="AddDocument"/>
					</GridContainer>
				</ScrollableContainer>

				<GridContainer RowID="DocumentTabsBorder" FillColor="@DarkGrey"/>

				<GridContainer RowID="Content" FillColor="@DarkGrey">
					<Rows>
						<Row ID="Ruler" Height="14"/>
						<Row ID="Map" Height="1*"/>
						<Row Height="2"/>
					</Rows>
					<Columns>
						<Column Width="2"/>
						<Column ID="Ruler" Width="14"/>
						<Column ID="Map" Width="1*"/>
						<Column Width="2"/>
					</Columns>
					<Image RowID="Ruler" ColumnID="Map" ColorMask="1,1,1" Name="HorizontalRuler"/>
					<Image RowID="Map" ColumnID="Ruler" ColorMask="1,1,1" Name="VerticalRuler"/>
					<Image RowID="Ruler" ColumnID="Ruler" ColorMask="1,1,1"/>
					
					<!--********* Mosaic Map **********-->
					<ScrollableContainer RowID="Map" ColumnID="Map" Name="MapScrollable" Clickable="true" HSlider="false" VSlider="false" AutoResize="false">
						<Container Name="MosaicMap" FillColor="@LightGrey" Size="0,0"/>
						<Image ColorMask="0,0.6,0.8" Alpha="0.4" Visible="false" Name="SelectionRect" Pos="0,0" Size="10,10"/>
					</ScrollableContainer>
				</GridContainer>
			</GridContainer>

			<GridContainer ColumnID="Options" BorderWidth="1.0">
				<Rows>
					<Row ID="Selected" Height="300" MarginStart="5" MarginEnd="10"/>
					<Row ID="MapSettings" Height="1*"/>
				</Rows>

				<!--********* Selection Panel **********-->
				<GridContainer>
					<Columns>
						<Column Width="1*"/>
						<Column Width="38"/>
					</Columns>
					<Include Path="Cfg/GUI/Templates/MapEditor/MapSettings/SelectionDummy.xml"/>
					<GridContainer Column="1">
						<Rows>
							<Row Height="38"/>
						</Rows>
						<RadioGroupLogical Name="SelectionGroup"/>
						<CheckBox Row="0" RadioGroup="SelectionGroup" ImageChecked="UI/Editor/MapEditor/rightpanel_infoOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_infoOff.tga" Tooltip="Selection Info" Checked="true"/>
					</GridContainer>
				</GridContainer>
				
				<!--********* Settings Panel **********-->
				<GridContainer RowID="MapSettings">
					<Columns>
						<Column Width="1*"/>
						<Column Width="38"/>
					</Columns>
					<Include Path="Cfg/GUI/Templates/MapEditor/MapSettings/SectionBrowser.xml"/>
					<Include Path="Cfg/GUI/Templates/MapEditor/MapSettings/MapSettings.xml"/>
					<Include Path="Cfg/GUI/Templates/MapEditor/MapSettings/DummyBrowser.xml"/>
					<RadioGroupLogical Name="MapSettingGroup"/>
					<GridContainer Column="1">
						<Rows>
							<Row Height="38"/>
							<Row Height="38"/>
							<Row Height="38"/>
							<Row Height="38"/>
						</Rows>
						
						<CheckBox Row="0" RadioGroup="MapSettingGroup" Name="CBSettings" ImageChecked="UI/Editor/MapEditor/rightpanel_settingsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_settingsOff.tga" Tooltip="Map Settings" Checked="true"/>
						<CheckBox Row="1" RadioGroup="MapSettingGroup" Name="CBSections" ImageChecked="UI/Editor/MapEditor/rightpanel_sectionsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_sectionsOff.tga" Tooltip="Section Browser"/>
						<CheckBox Row="2" RadioGroup="MapSettingGroup" Name="CBDummies" ImageChecked="UI/Editor/MapEditor/rightpanel_dummiesOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_dummiesOff.tga" Tooltip="Dummies"/>
						<CheckBox Row="3" RadioGroup="MapSettingGroup" Name="CBGroups" ImageChecked="UI/Editor/MapEditor/rightpanel_groupsOn.tga" ImageUnchecked="UI/Editor/MapEditor/rightpanel_groupsOff.tga" Tooltip="Groups"/>
					</GridContainer>
				</GridContainer>
			</GridContainer>
		</GridContainer>
	</GridContainer>
</Window>