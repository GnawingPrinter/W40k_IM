<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>	
<Window>
	<Include Path="Windows/Styles.xml"/>
	
	<Constants>
		<DefaultFontSize Value="16"/>
	</Constants>

	<StyleRules>
		<Rule Pattern="*[@Class='Icon']" 
		IdleImg="UI/Interaction/fullscreen_headline_buttonOff.tga"
		PressImg="UI/Interaction/fullscreen_headline_buttonOn.tga"
		RolloverImg="UI/Interaction/fullscreen_headline_buttonOver.tga"
		/>
		<Rule Pattern="Text" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="EditBox" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="Icon" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="ComboBox" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="CheckBox" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="Row" FontSize="@DefaultFontSize" Sharpness="0.5"/>
		<Rule Pattern="Column" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	</StyleRules>	

	<GridContainer Width="460" HorizontalAlignment="right" FillColor="#000000">
			<Rows>
				<Row Height="45" ID="Settings"/>
				<Row Height="1*" ID="List"/>
				<Row Height="45" ID="Controls"/>
			</Rows>
			<FlowContainer RowID="Settings" Horizontal="true" Margin="5">
				<Text Text="Soldier Type"/>
				<ComboBox Width="100" MarginLeft="5" Name="CbSoldierType" Color="#ffffff"/>
				<Text Text="Filter" MarginLeft="30"/>
				<EditBox Width="150" MarginLeft="5" Name="SoldierFilter" Color="#ffffff"/>
			</FlowContainer>
			<ListBox RowID="List" Name="SoldierList" Style="Text_Normal_White"/>
			<Icon Class="Icon" RowID="Controls" Text="Spawn Soldier" Width="150" Margin="5" 
				Name="BnSpawnSoldier"
			/>
		</GridContainer>
</Window>