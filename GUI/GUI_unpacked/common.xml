<Constants>
	<LightGrey Value="#E4E4E4"/>
	<MidGrey Value="#BBBBBB"/>
	<DarkGrey Value="#666666"/>
	<BasicFont Value="PT Sans"/>
	<TabsHeight Type="int" Value="28"/>
	<ListboxSelectionColor Value="#00AAFF"/>
	<ListboxInactiveSelectionColor Value="#44CCFF"/>
	<DefaultFontSize Value="16"/>
</Constants>

<Styles>
	<NormalText Color="#000000" FontType="@BasicFont" HighlightColor="#000000" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	<HighlightedText Color="#000000" FontType="@BasicFont" Bold="true" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	<InvertedText Color="#ebebeb" FontType="@BasicFont" Bold="true" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	<SimpleButton IdleImg="white.tga" Color="#000000" FontType="@BasicFont" ColorMask="#afaaa5" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	<InvertedButton IdleImg="white.tga" Color="#ebebeb" FontType="@BasicFont" ColorMask="#66615c" FontSize="@DefaultFontSize" Sharpness="0.5"/>
	<ListBox FontSize="16" SelectionColor="#0088FF" InactiveSelectionColor="#33AAFF" FontSize="@DefaultFontSize" Sharpness="0.5"/>
</Styles>

<StyleRules>
	<Rule Pattern="Text" Style="NormalText"/>
	<Rule Pattern="EditBox" Color="#000000" FontType="@BasicFont" HighlightColor="#000000" SelectionColor="@ListboxSelectionColor" FontSize="@DefaultFontSize"/>
	<Rule Pattern="Icon" FontType="@BasicFont" FontSize="@DefaultFontSize"/>
	<Rule Pattern="ComboBox" SelectionColor="@ListboxSelectionColor" Color="#000000" FontType="@BasicFont" HighlightColor="#000000" FontSize="@DefaultFontSize" ElementDirectory="Editor"/>
	<Rule Pattern="ListBox" SelectionColor="@ListboxSelectionColor" InactiveSelectionColor="@ListboxInactiveSelectionColor" Color="#000000" FontType="@BasicFont" HighlightColor="#000000" FontSize="@DefaultFontSize"/>
	<Rule Pattern="CheckBox" Style="NormalText"/>
</StyleRules>

